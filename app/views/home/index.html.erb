<section class="flex-col">
  <h1 class="font-bold text-4xl">Home</h1>
  <div class="mt-6">
    <p class="border-black"> <%= render(ButtonComponent.new(text: 'Button', scheme: :primary)) %> </p>
    <%= render(LinkButtonComponent.new(text: 'Click me!', style: 'primary')) %>  <br/>
    <%= render(LinkButtonComponent.new(text: 'Save', style: 'success')) %> <br/>
    <%= render(LinkButtonComponent.new(text: 'Cancel', style: 'secondary')) %>  <br/>
  </div>

  <div class="text-emerald-500 font-bold mt-6">
    <%= render(ComponentNameComponent.new(title: "my title")) do %>
      Content of view
    <% end %>
    <br/>
    <%= render(ComponentNameComponent.new(title: "my title").with_content("Content of #with_content method")) %> <br/>
  </div>
 
  <div class="font-bold mt-6">
    <%= render(ExampleComponent.new(title: 'Example', text: 'Example text'), class: 'text-emerald-500') %>  <br/>
    <%= render(ExampleComponent.new(title: "This is a really long title that we are testing with", text: 'Long text'))  %> 
  </div>
</section>